---

- debug:
    msg: "default {{ hostvars['node1']['default_ipv4'] }}"

- debug:
    msg: "dom {{ full_domain }}"


- name: Set IP in hosts
  lineinfile:
    dest: /etc/hosts
    regexp: '.*{{ item }}$'
    line: "{{ hostvars[item].ansible_host }} {{item}}"
    state: present
  when: hostvars[item].ansible_host is defined
  with_items: "{{ groups.all }}"
