---

- debug:
    msg: "default {{ hostvars['node1']['default_ipv4'] }}"

- debug:
    msg: "dom {{ full_domain }}"


- name: Set hosts
  lineinfile:
    dest: /etc/hosts
    regexp: '.*{{ full_domain }}$'
    line: "{{ hostvars['node1']['default_ipv4'] }} {{full_domain}}"
    state: present
  become: true
